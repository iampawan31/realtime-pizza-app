<section class="cart py-16">
  <div class="container mx-auto xl:w-1/2">
    <% if (session.cart) { %>
    <div class="flex items-center border-b border-gray-300 pb-4">
      <img class="w-8" src="img/cart-black.svg" alt="cart icon" />
      <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
    </div>
    <div class="pizza-list">
      <% for(let pizza of Object.values(session.cart.items)) { %>
      <div class="flex items-center my-8">
        <img
          class="w-2/12"
          src="/img/<%= pizza.item.image %>"
          alt="pizza-list"
        />
        <div class="ml-4 flex-1">
          <h1><%= pizza.item.name %></h1>
          <span><%= pizza.item.size %> </span>
        </div>
        <span class="flex-1"><%= pizza.qty %> Pcs</span>
        <span class="font-bold text-lg"
          >₹<%= pizza.item.price * pizza.qty %></span
        >
      </div>
      <% } %>
    </div>
    <hr />
    <div class="text-right py-4">
      <div>
        <span class="text-lg font-bold">Total:</span>
        <span class="total-amount text-2xl font-bold ml-4"
          >₹<%= session.cart.totalPrice %>
        </span>
      </div>
      <% if (user) { %>
      <div>
        <form action="/orders" method="POST" class="mt-12">
          <input
            class="border border-gray-400 p-2 w-1/2 mb-4"
            type="text"
            name="phone"
            placeholder="Phone Number"
          />
          <input
            class="border border-gray-400 p-2 w-1/2"
            type="text"
            name="address"
            placeholder="Address"
          />
          <div>
            <button
              class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6"
              type="submit"
            >
              Order Now
            </button>
          </div>
        </form>
      </div>

      <% } else {%>
      <a
        href="/login"
        class="inline-block cursor-pointer px-6 btn-primary py-2 mt-6 rounded-full text-white font-bold"
        >Login to continue</a
      >
      <% } %>
    </div>
  </div>
  <% } else { %>
  <div class="container mx-auto text-center">
    <h1 class="text-3xl font-bold mb-2">Cart Empty</h1>
    <p class="text-gray-500 text-lg mb-12">
      You probably haven't ordered a pizza yet. <br />
      To Order a pizza, go to Homepage.
    </p>
    <img src="./img/empty-cart.svg" class="w-1/5 mx-auto" alt="empty cart" />
    <a
      href="/"
      class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12"
      >Go Back</a
    >
  </div>
  <% } %>
</section>
